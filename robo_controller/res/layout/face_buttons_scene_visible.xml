<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/buttonFaceOk"
        style="?buttonBarButtonStyle"
        android:background="@drawable/selectable_button_states"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/face_ok"
        android:visibility="visible"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/buttonFaceHappy"
        style="?buttonBarButtonStyle"
        android:background="@drawable/selectable_button_states"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/face_happy"
        android:visibility="visible"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/buttonFaceBlue"
        style="?buttonBarButtonStyle"
        android:background="@drawable/selectable_button_states"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/face_blue"
        android:visibility="visible"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/buttonFaceAngry"
        style="?buttonBarButtonStyle"
        android:background="@drawable/selectable_button_states"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/face_angry"
        android:visibility="visible"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/buttonFaceIll"
        style="?buttonBarButtonStyle"
        android:background="@drawable/selectable_button_states"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/face_ill"
        android:visibility="visible"
        tools:ignore="ContentDescription" />

</RelativeLayout>
