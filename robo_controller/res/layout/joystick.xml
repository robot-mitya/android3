<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="170dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/head_left"
        style="?buttonBarButtonStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/joystick_button_states"
        android:src="@drawable/joystick_left"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/head_right"
        style="?buttonBarButtonStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp"
        android:layout_marginStart="110dp"
        android:background="@drawable/joystick_button_states"
        android:src="@drawable/joystick_right"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/head_up"
        style="?buttonBarButtonStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="110dp"
        android:layout_marginStart="65dp"
        android:background="@drawable/joystick_button_states"
        android:src="@drawable/joystick_up"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/head_down"
        style="?buttonBarButtonStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="65dp"
        android:background="@drawable/joystick_button_states"
        android:src="@drawable/joystick_down"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/head_center"
        style="?buttonBarButtonStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp"
        android:layout_marginStart="65dp"
        android:background="@drawable/joystick_button_states"
        android:src="@drawable/joystick_center"
        tools:ignore="ContentDescription" />

</RelativeLayout>